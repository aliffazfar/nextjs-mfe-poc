{
  "name": "next-mfe",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm run watch:widget & next dev --webpack -p 3002",
    "build": "pnpm run build:widget && next build --webpack",
    "start": "next start",
    "lint": "eslint",
    "build:widget": "esbuild src/expose-widget.tsx --bundle --outfile=public/widget.js --jsx=automatic",
    "watch:widget": "esbuild src/expose-widget.tsx --bundle --outfile=public/widget.js --jsx=automatic --watch=forever"
  },
  "dependencies": {
    "next": "16.0.1",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "esbuild": "^0.25.11",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
